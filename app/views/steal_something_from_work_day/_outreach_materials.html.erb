<%# stickers %>
<h1 id='stickers'>
  <%= t 'steal_something_from_work_day.outreach_materials.stickers.title' %>
  <small><%= link_to '#', '#stickers' %></small>
</h1>

<p class='my-4'>
  <%= t 'steal_something_from_work_day.outreach_materials.stickers.description' %>
</p>

<div class="row">
  <div class="col-lg-6 mb-5">
    <%= card_tag t('steal_something_from_work_day.outreach_materials.stickers.cards').first %>

    <div class="card my-4">
      <%= image_tag "https://cdn.crimethinc.com/assets/steal-something-from-work-day/images/ssfwd-sticker-on-box.jpg", class: "card-img-top" %>
    </div><!-- .card -->
  </div>

  <div class="col-lg-6 mb-5">
    <%= card_tag t('steal_something_from_work_day.outreach_materials.stickers.cards').last %>
  </div>
</div>

