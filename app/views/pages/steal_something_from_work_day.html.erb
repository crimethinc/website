<!DOCTYPE html>
<%= tag.html dir:    html_dir,
             lang:   html_lang,
             id:     html_id,
             class:  html_class,
             prefix: html_prefix do %>
  <head>
    <%= render 'shared/head/license' %>
    <title><%= page_title %></title>
    <%= render 'shared/head/meta_tags' %>
    <%= render 'shared/head/public_meta_tags' %>
    <%= render 'shared/head/social_media_meta_tags' %>
    <%= render 'shared/head/link_tags' %>
    <%= render 'shared/head/fav_and_touch_icons' %>

    <%= stylesheet_link_tag 'steal-something-from-work-day', media: 'all' %>
    <%= javascript_include_tag 'steal-something-from-work-day' %>
  </head>

  <body id='<%= body_id %>' data-spy='scroll' data-target='#section-list' data-offset='0'>
    <%= render 'shared/development_mode_banner' %>

    <header role='banner' id='hero' class='d-flex' style='<%= hero_background_image_css %>'>
      <div class='align-self-center col'>
        <div class='logos'>
          <%= link_to [:root], class: 'logo-mark' do %>
            <%= image_tag 'https://cloudfront.crimethinc.com/assets/steal-something-from-work-day/crimethinc-logo-mark-bulb-and-bones.png' %>
          <% end %>

          <%= link_to [:root], class: 'logo-type' do %>
            <%= image_tag 'https://cloudfront.crimethinc.com/assets/steal-something-from-work-day/crimethinc-logo-type-white.svg' %>
          <% end %>
        </div>

        <h1>
          Steal Something<br><span>from</span><br>Work&nbsp;Day
        </h1>

        <p>April 15, every year</p>
      </div>
    </header>

    <div class='container'>
      <div class='row'>

        <div class='col-12 col-md-4 nav-wrapper'>
          <nav id="section-list" class="list-group sticky-top pt-3">
            <% @sections.each do |section| %>
              <%= link_to section, "##{section.to_slug}", class: 'list-group-item list-group-item-action' %>
            <% end %>
          </nav>
        </div><!-- .nav-wrapper -->

        <div class='col-12 col-md-8 main-wrapper'>
          <main>

            <% @sections.each do |section| %>
              <article id="<%= section.to_slug %>" class="py-5 mb-5">
                <%= render "pages/steal_something_from_work_day/#{section.to_slug.gsub('-', '_')}" %>
              </article>
            <% end %>

          </main>
        </div><!-- .main-wrapper -->

      </div><!-- .row -->
    </div><!-- .container -->

  </body>
<% end %>
