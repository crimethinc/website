<%# locals: (article:) %>

<header class='p-name mb-3'>
  <h2 class='p-x-title h1 fw-bold lh-1 mb-1'>
    <%= link_to article.path do %>
      <%= RubyPants.new(article.title).to_html.html_safe %>
    <% end %>
  </h2>

  <% if article.subtitle.present? %>
    <h3 class='p-x-subtitle h2 fw-light'>
      <%= link_to article.path do %>
        <%= RubyPants.new(article.subtitle).to_html.html_safe %>
      <% end %>
    </h3>
  <% end %>
</header>
