<%# locals: (article:) %>

<% if article.published? %>
  <div class='text-start text-lg-end'>
    <b class='d-block'>Share this article</b>

    <% social_share_sites(article).each do |domain, url| %>
      <%= link_to url, class: 'text-decoration-none', target: '_blank', rel: 'noopener' do %>
        <%= image_tag "social-icons/#{domain.to_s.parameterize}.svg", size: '40x40' %>
        <span class='visually-hidden'><%= domain %></span>
      <% end %>
    <% end %>
  </div>
<% end %>
