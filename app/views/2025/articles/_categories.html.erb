<% if article.categories.present? %>
  <div class="categories">
    <b class="badge">Categories:</b>

    <ul>
      <% if controller_name == 'articles' && action_name == 'show' %>
        <li><%= image_tag 'library/tags.png', class: 'icon-image' %></li>
      <% end %>
      <% article.categories.each do |category| %>
        <li><%= link_to category.name, category_path(category.slug), rel: "tag", class: "p-category" %></li>
      <% end %>
    </ul>
  </div>
<% end %>
