<%= render "admin/page_header", thing: @journals %>

<% @journals.each do |journal| %>
  <div class="mb-5">
    <header class="mt-5 mb-3">
      <%= link_to [:admin, journal] do %>
        <h1><%= journal.title %></h1>
        <h2 class="lead"><%= journal.subtitle %></h2>
      <% end %>
    </header>

    <p><%= link_to "NEW Issue", [:new, :admin, :issue, journal_id: journal.id], class: "btn btn-outline-primary btn-sm" %></p>

    <table class="table table-striped table-sm mb-5">
      <thead class="table-dark">
        <tr>
          <th></th>
          <th>Name</th>
          <th>Path</th>
          <th class='text-end'>Published</th>
        </tr>
      </thead>

      <tbody>
        <% journal.issues.each do |issue| %>
          <tr>
            <td><%= link_to "EDIT", [:edit, :admin, issue], class: "btn btn-outline-primary btn-sm" %></td>

            <td>
              <%= link_to [:admin, issue] do %>
                <b><%= issue.title %></b><br>
                <%= issue.subtitle %>
              <% end %>
            </td>

            <td><%= link_to issue.path, issue.path %></td>
            <td class='text-end'><%= issue.published_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
