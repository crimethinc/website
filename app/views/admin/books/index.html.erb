<%= render "admin/page_header", thing: @books %>

<table class="table table-striped table-sm mb-5 table-bordered">
  <thead class="thead-dark">
    <tr>
      <th></th>
      <th>Name</th>
      <th>Status</th>

        <% [
          "Screen Single Page View PDF",
          "Screen Two Page View PDF",
          "Print Color PDF",
          "Print B/W PDF",
          "Print Color A4 PDF",
          "Print B/W A4 PDF",
          "Lo Res PDF",
          "ePub",
          "Mobi",
        ].each do |type| %>
          <th class="text-center"><%= type %></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= link_to "EDIT", [:edit, :admin, book], class: "btn btn-light border-secondary btn-sm" %>
        </td>

        <td>
          <%= link_to [:admin, book] do %>
            <b><%= book.title %></b><br>
            <%= book.subtitle %>
          <% end %>
        </td>

        <td>
          <%= render "/admin/articles/publication_status_badge", article: book %>
        </td>


        <% [
            :screen_single_page_view,
            :screen_two_page_view,
            :print_color,
            :print_black_and_white,
            :print_color_a4,
            :print_black_and_white_a4,
            :lite,
            :epub,
            :mobi
          ].each do |type| %>
          <td class="text-center align-middle">
            <%= "✔️" if book.send("#{type}_download_present?") %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @books, views_prefix: "admin", theme: "twitter-bootstrap-4" %>
