<%= render "admin/page_header", thing: @locales %>

<table class="table table-striped table-sm mb-5">
  <thead class="table-dark">
    <tr>
      <th></th>
      <th>Abbreviation</th>
      <th>Name in English</th>
      <th>Name</th>
      <th>Slug</th>
      <th class='text-end'>Language Direction</th>
    </tr>
  </thead>

  <tbody>
    <% @locales.each do |locale| %>
      <tr>
        <td>
          <%= link_to "EDIT", [:edit, :admin, locale], class: "btn btn-outline-primary btn-sm" %>
        </td>
        <td class="text-uppercase">
          <%= link_to locale.abbreviation, locale_subdomain_url(locale), target: :_blank %>
        </td>
        <td><%= locale.name_in_english %></td>
        <td><%= locale.name %></td>
        <td><%= locale.slug %></td>
        <td class='text-end'><%= locale.language_direction.upcase %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @locales, views_prefix: "admin", theme: "twitter-bootstrap-4" %>
