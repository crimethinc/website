<%= render "admin/page_header", thing: @pages %>

<table class="table table-striped table-sm mb-5">
  <thead class="thead-dark">
    <tr>
      <th></th>
      <th>Status</th>
      <th>Path</th>
      <th>Published Date</th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td>
          <%= link_to "EDIT", [:edit, :admin, page], class: "btn btn-light border-secondary btn-sm" %>
        </td>

        <td><%= render "/admin/articles/publication_status_badge", resource: page %></td>

        <td>
          <%= link_to page.path, page.path %>
        </td>

        <td>
          <%= display_date page.published_at %>
          <%= display_time page.published_at %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @pages, views_prefix: "admin", theme: "twitter-bootstrap-4" %>
