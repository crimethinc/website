<!-- Featured books -->
<section class='row'>
  <p class='mb-2 pt-5' id='books'>Featured Books</p>

  <% @featured_books.each do |book| %>
    <div class='col col-6'>

      <div class='row'>
        <div class='col col-3'>
          <%= link_to image_tag(book.image), book.path %>
        </div><!-- /.col.col-3 -->

        <div class='col col-9'>
          <%= link_to book.path do %>
            <div class='fw-bold'><%= book.title %></div>
            <%= book.subtitle %>
          <% end %>

          <%= render_markdown book.summary %>

          <p class='fw-bold text-end'><%= link_to 'Learn more â†’', book.path %></p>
        </div><!-- /.col.col-9 -->
      </div><!-- /.row -->

    </div><!-- /.col.col-6 -->
  <% end %>
</section><!-- /.row -->
