<!-- Latest and recent podcast episodes -->
<section class='pb-5'>
  <div class='row'>
    <div class='col col-6 pt-5' id='podcast'>
      <p class='mb-2'><%= tt :latest_podcast_episode %></p>

      <div class='row'>
        <div class='col col-3'>
          <%= link_to image_tag(latest_episode.image), latest_episode.path %>
        </div><!-- /.col.col-3 -->

        <div class='col col-9'>
          <p>
            <%= link_to latest_episode.path, class: 'fw-bold' do %>
              <%= latest_episode.podcast.title %>
              #<%= latest_episode.episode_number %>
            <% end %>
            —
            <%= display_date latest_episode.published_at %>
          </p>

          <%= link_to latest_episode.path do %>
            <h2 class='h5 fw-bold'><%= latest_episode.title %></h2>
            <h3 class='h5 fw-light'><%= latest_episode.subtitle %></h3>
          <% end %>

          <p class='text-end fw-bold mt-3'><%= link_to "#{tt :listen_to_episode} →", latest_episode.path %></p>
        </div><!-- /.col.col-9 -->
      </div><!-- /.row -->
    </div><!-- /.col.col-6 -->

    <div class='col col-6 pt-5' id='episodes'>
      <p class='mb-2'><%= tt :recent_podcast_episodes %></p>

      <div class='row'>
        <% recent_episodes.each do |episode| %>
          <div class='col col-3'>
            <%= link_to image_tag(episode.image), episode.path %>
          </div><!-- /.col.col-3 -->
        <% end %>
      </div><!-- /.row -->

      <p class='text-end fw-bold mt-3'><%= link_to "#{tt :more_podcast_episodes} →", :podcasts %></p>
    </div><!-- /.col.col-6 -->
  </div><!-- /.row -->
</section>
<!-- /Latest and recent podcast episodes -->
