<!-- Selected tools -->
<% if @selected_tools.present? %>
  <section>
    <div class='row'>
      <div class='col col-6'>
        <p class='mb-2 pt-5' id='tools'>Selected tools</p>
      </div>

      <div class='col col-6'>
        <p class='mb-2 pt-5 text-end' id='tools'><%= link_to 'More tools â†’', :tools %></p>
      </div>
    </div>

    <div class='row'>
      <% @selected_tools.each do |tool| %>
        <div class='col col-3'>
          <%= link_to image_tag(tool.image), tool.path %>

          <p>
            <%= link_to tool.class, tool.class.to_s.downcase.pluralize.to_sym %>
          </p>

          <%= link_to tool.path do %>
            <div class='fw-bold'><%= tool.title %></div>

            <% if tool.subtitle.present? %>
              <%= tool.subtitle %>
            <% end %>
          <% end %>
        </div><!-- /.col.col-3 -->
      <% end %>
    </div><!-- /.row -->
  </section>
<% end %>
<!-- /Selected tools -->
