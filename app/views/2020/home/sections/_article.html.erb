<!-- Latest article -->
<section id='latest' class='py-5'>
  <p class='mb-2'>Latest article</p>

  <article class='row'>
    <div class='col col-6'>
      <%= render_markdown "[[#{article.image} #{article.image_description}]]" %>
    </div><!-- /.col.col-6 -->

    <div class='col col-6'>
      <%= link_to article.path do %>
        <h1 class='fw-bold'><%= article.title %></h1>
        <h2><%= article.subtitle %></h2>
      <% end %>

      <div>
        <%= render_markdown article.lede %>
      </div><!-- /.col.col-6 -->

      <p class='text-uppercase'><%= link_to 'Keep reading â†’', article.path %></p>
    </div><!-- /.row -->
  </article>
</section>
