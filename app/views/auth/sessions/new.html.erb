<div class="page-header">
  <h1>Sign In</h1>
</div>

<%= form_tag [:auth, :sessions] do %>
  <div class="form-group">
    <%= label_tag :email, "Email", class: "sr-only" %>
    <%= email_field_tag :email, params[:email], autofocus: true, class: "form-control input-lg", placeholder: "Email" %>
  </div>
  <div class="form-group">
    <%= label_tag :password, nil, class: "sr-only" %>
    <%= password_field_tag :password, nil, class: "form-control input-lg", placeholder: "Password" %>
  </div>

  <div class="actions">
    <button type="submit" class="btn btn-primary btn-lg pull-right">Sign In</button>
  </div>
<% end %>
