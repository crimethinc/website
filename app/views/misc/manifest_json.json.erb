{
  "lang":       "en",
  "short_name": "<%= t(:site_name) %>",
  "name":       "<%= t(:site_name) %>",

  "icons": [
    <% icon_sizes.each do |size| %>
      {
        "src":   "<%= asset_url "icons/icon-#{size}x#{size}.png" %>",
        "sizes": "<%= size %>x<%= size %>",
        "type":  "image/png"
      }<%= "," unless size == "600" %>
      <%# 600 is the last in the list of sizes, so should not get a comma after the hash %>
    <% end %>
  ],

  "start_url":        "/",
  "display":          "minimal-ui",
  "background_color": "#ffffff",
  "theme_color":      "#ffffff"
}
