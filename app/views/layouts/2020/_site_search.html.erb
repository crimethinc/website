<%= form_with url: :search, role: 'search', method: 'get', local: true do %>
  <%= label_tag        :q, tt('search.form_placeholder'), class: 'visually-hidden form-label' %>
  <%= search_field_tag :q, @search&.query, placeholder: tt('search.form_placeholder'), class: 'form-control', id: :q, autocomplete: :off %>
<% end %>
