<footer class='container mt-5 pt-5 border-top' role='contentinfo' id='site-footer'>
  <div class='row'>
    <div class='col-12 col-md-6 pr-5 mb-5'>
      <nav>
        <h2 class='pt-3' id='sitemap'><%= t 'footer.nav.heading' %></h2>

        <dl>
          <dt>
            <%= link_to t('footer.nav.articles.label'), :library %>
            <small class='fw-normal'><%= link_to t('footer.nav.articles.feed'), :feed, class: 'text-secondary' %></small>
          </dt>
          <dd>
            <% categories = %w[arts adventure analysis current_events history how_to news technology] %>
            <% categories.each do |category| %>
              <%= link_to t("footer.nav.articles.#{category}"), [:category, slug: category.dasherize] %><%= tag.span ',' unless category == categories.last %>
            <% end %>
          </dd>

          <dt>
            <%= link_to t('footer.nav.tools.label'), :tools %>
          </dt>
          <dd>
            <% tools = %w[zines journals posters stickers videos music logos to_change_everything steal_something_from_work_day] %>
            <% tools.each do |tool| %>
              <%= link_to t("footer.nav.tools.#{tool.to_sym}"), tool.to_sym %><%= tag.span ',' unless tool == tools.last %>
            <% end %>
          </dd>

          <dt><%= link_to t('footer.nav.books.label'), :books %></dt>
          <dd>
            <% books = %w[from_democracy_to_freedom contradictionary work expect_resistance recipes_for_disaster days_of_war_nights_of_love no_wall_they_can_build off_the_map] %>
            <% books.each do |book| %>
              <%= link_to t("footer.nav.books.#{book}"), [:book, slug: book.dasherize] %><%= tag.span ',' unless book == books.last %>
            <% end %>
          </dd>

          <dt>
            <%= link_to t('footer.nav.podcast.label'), :podcasts %>
            <small class='fw-normal'><%= link_to t('footer.nav.podcast.feed'), %i[podcast_feed], class: 'text-secondary' %></small>
          </dt>
          <dd>
            <% podcasts = %w[the_ex_worker no_wall_they_can_build the_hotwire] %>
            <% podcasts.each do |podcast| %>
              <%= link_to t("footer.nav.podcast.#{podcast}"), "/podcasts/#{podcast.dasherize}" %><%= tag.span ',' unless podcast == podcasts.last %>
            <% end %>
          </dd>

          <dt><%= link_to t('footer.nav.store.label'),       '/store' %></dt>
          <dd><%= link_to t('footer.nav.store.description'), '/store' %></dd>
        </dl>

        <% if media_mode? && I18n.locale == :en %>
          <p>
            <%= link_to(t('footer.site_mode'), url_for_current_path_with_subdomain(subdomain: :lite)) %>
          </p>
        <% end %>

      </nav>
    </div><!-- .col-12 col-md-6 -->

    <div class='col-12 col-md-6 pr-5 mb-5' id='email'>

      <div id='mc_embed_signup'><!-- Begin MailChimp Signup Form -->
        <h2 class='pt-3'><%= t('footer.contact.newsletter.heading') %></h2>

        <%= render_markdown t('footer.contact.newsletter.description') %>

        <%= form_with url: '//crimethinc.us2.list-manage.com/subscribe/post?u=cb48383602b7373f496e9ba33&amp;id=344714b249', id: 'mc-embedded-subscribe-form', class: 'newsletter-signup-form validate', name: 'mc-embedded-subscribe-form', target: '_blank', rel: 'noopener', novalidate: true do |form| %>
          <div class='mc-field-group'>
            <%= form.label       'mce-EMAIL',                                         t('footer.contact.newsletter.signup_form_placeholder'), class: 'visually-hidden' %>
            <%= form.email_field :email, name: 'EMAIL', id: 'mce-EMAIL', placeholder: t('footer.contact.newsletter.signup_form_placeholder'), class: 'form-control mb-3' %>
          </div>

          <div class='mc-field-group'>
            <%= form.label 'mce-MMERGE3', t('footer.contact.newsletter.signup_form_select_placeholder'), class: 'visually-hidden' %>

            <select name='MMERGE3' class='required form-select' id='mce-MMERGE3'>
              <option value='<%= t('footer.contact.newsletter.signup_form_select_option_lot') %>'><%= t('footer.contact.newsletter.signup_form_select_option_lot') %></option>
              <option value='<%= t('footer.contact.newsletter.signup_form_select_option_little') %>'><%= t('footer.contact.newsletter.signup_form_select_option_little') %></option>
            </select>
          </div>

          <div id='mce-responses' class='clear visually-hidden'>
            <div class='response' id='mce-error-response'>  </div>
            <div class='response' id='mce-success-response'></div>
          </div>

          <div class='text-end mt-3'>
            <%= button_tag t('footer.contact.newsletter.signup_button_text'), name: 'subscribe', id: 'mc-embedded-subscribe', class: 'btn btn-outline-success btn-lg' %>
          </div>

          <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
          <% left_or_right = html_dir == 'ltr' ? 'position: absolute; left: -5000px;' : 'position: absolute; right: -5000px;' %>
          <div id='a-thing-with-an-id' style='<%= left_or_right %>' aria-hidden='true'><input type='text' name='b_cb48383602b7373f496e9ba33_344714b249' tabindex='-1' value='' autocomplete="off"></div>
        <% end %>
      </div><!--End mc_embed_signup-->

      <div class='pt-3' id='social'>
        <h2><%= t('footer.contact.social.heading') %></h2>
        <%= render_markdown t('footer.contact.social.description') %>

        <% social_links_by_domain.in_groups_of(2).each do |row| %>
          <div class='mb-2 row'>
            <% row.each do |social| %>
              <% next if social.nil? %>

              <% social.each do |domain, url| %>
                <div class='col-6'>
                  <%= link_to url, class: 'my-2', target: '_blank', rel: 'noopener' do %>
                    <%= image_tag "social-icons/#{domain.to_s.parameterize}.svg", size: '40x40', class: 'me-2' %>
                    <%= domain %>
                  <% end %>
                </div>
              <% end %>

            <% end %>
          </div>
        <% end %>
      </div><!-- #social -->

    </div><!-- .col-12 col-md-6 -->
  </div><!-- .row -->

  <div rel='license' class='text-secondary text-center my-5 py-5'>
    <p><%= t('footer.mantra').sample %></p>
  </div>
</footer>
