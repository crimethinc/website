<% if Rails.env.development? %>
  <%# Highlight text that doesn't have a translation in locales YAML %>
  <style>.translation_missing { outline: 5px solid #ff0080; }</style>
<% end %>

<%# INFO: Update this instead of the bootstrap gem when new versions come out %>
<%# NOTE: Pull this in as static local file, create a rake task to automate that %>
<%= stylesheet_link_tag 'https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css',
                        media:       :all,
                        integrity:   'sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH',
                        crossorigin: :anonymous %>

<%
stylesheet_partials = %w[
  bootstrap-overrides
  fonts
  headings
  images
  links
  navbar
]
%>

<% stylesheet_partials.each do |stylesheet_partial| %>
  <%= stylesheet_link_tag "2025/#{stylesheet_partial}", media: :all %>
<% end %>
