<!DOCTYPE html>
<%= tag.html dir:    html_dir,
             lang:   html_lang,
             id:     html_id,
             class:  html_class,
             prefix: html_prefix do %>
  <head>
    <%= render 'steal_something_from_work_day/head/license' %>
    <title><%= t 'steal_something_from_work_day.title' %> | <%= t 'steal_something_from_work_day.crimethinc' %></title>

    <%= render 'steal_something_from_work_day/head/meta_tags' %>
    <%= render 'steal_something_from_work_day/head/public_meta_tags' %>
    <%= render 'steal_something_from_work_day/head/social_media_meta_tags' %>
    <%= render 'steal_something_from_work_day/head/link_tags' %>
    <%= render 'steal_something_from_work_day/head/fav_and_touch_icons' %>

    <% if lite_mode? %>
      <%= render_themed "shared/head/lite_mode_css" %>
    <% end %>

    <% if media_mode? %>
      <% %w[
        vendor/bootstrap
        2025/bootstrap-overrides
        2025/fonts
        2025/headings
        steal-something-from-work-day
      ].each do |stylesheet| %>
        <%= stylesheet_link_tag stylesheet, media: :all %>
      <% end %>
    <% end %>

    <%# Bootstrap JS from their CDN %>
    <%# TODO: refactor this away, only used for hamburger icon in responsive nav %>
    <%= javascript_include_tag 'https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.min.js',
                               integrity:   'sha384-G/EV+4j2dNv+tEPo3++6LCgdCROaejBqfUeNjuKAiuXbjrxilcCdDz6ZAVfHWe1Y',
                               crossorigin: :anonymous %>
  </head>

  <body data-bs-spy='scroll' data-bs-target='#section-list' data-bs-offset='0'>
    <%= render "shared/development_mode_banner" %>

    <header role='banner' id='hero' class='d-flex p-5 mb-5 text-white bg-dark background-<%= rand 1..9 %>'>
      <div class='container'>
        <div class='align-self-center col'>
          <div class='logos mb-5'>
            <%= link_to :root, class: 'logo-mark' do %>
              <%= image_tag 'https://cdn.crimethinc.com/assets/steal-something-from-work-day/crimethinc-logo-mark-bulb-and-bones.png' %>
            <% end %>

            <%= link_to :root, class: 'logo-type' do %>
              <%= image_tag 'https://cdn.crimethinc.com/assets/steal-something-from-work-day/crimethinc-logo-type-white.svg' %>
            <% end %>
          </div>

          <h1 class='display-1'><%= t 'steal_something_from_work_day.title' %></h1>
          <p><%= t 'steal_something_from_work_day.subtitle' %></p>

          <nav class='my-5'>
            <% @locales.each do |lang_code, name| %>
              <%= link_to name, url_for_current_path_with_subdomain(subdomain: lang_code), class: 'btn btn-outline-light btn-sm' %>
            <% end %>
          </nav>
        </div>
      </div>
    </header>

    <div id='top' class='container'>
      <div class='row'>
        <%= yield %>
      </div><!-- .row -->

      <footer class='mt-5 pt-5 mb-3 pb-3'>
        <!-- blank placeholder for bottom scrolling -->
      </footer>
    </div><!-- .container -->

  </body>
<% end %>
