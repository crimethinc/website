<% content_for :head do %>
  <%= rel_next_prev_link_tags(@articles) %>
<% end %>

<% content_for :auto_discovery do %>
  <%= auto_discovery_link_tag(:atom, tag_feed_path(@tag.slug), title: page_title) %>
<% end %>

<header>
  <h1>Tag</h1>
  <h2><%= @tag.name %></h2>
</header>

<div class="h-feed">
  <%= render_themed "articles/list", articles: @articles %>
</div>

<%= paginate @articles %>
