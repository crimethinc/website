---
lang: <%= @article.locale %>
title: <%= raw @article.title %>
subtitle: <%= raw @article.subtitle %>
tags: <%= @article.tags.map(&:name).join ", " %>

# for cwc.im short URL in tweets
short_path: <%= "/#{@article.short_path}" %>

# for link previews in social media / messaging apps
summary: <%= @article.summary %>
<%- if @article.image_description.present? -%>

# for image caption
header_image_description: <%= @article.image_description %>
<%- end -%>
<%- if @article.tweet.present? -%>

# for publishing to Twitter
tweet: <%= @article.tweet %>
<%- end -%>
---

<%= @article.content_and_notes.html_safe %>
