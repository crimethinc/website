# Check for existing ruby-install, otherwise install rbenv
brew 'rbenv' unless system 'command -v ruby-install >/dev/null 2>&1'

# PaaS CLI
tap 'heroku/brew'
brew 'heroku'

# Active Storage PDF previews
cask 'xquartz'
brew 'mupdf'
brew 'poppler'

# Word DOCX uploads on Article form
brew 'pandoc'

# Database
brew 'postgresql'

# Overcommit hooks
brew 'yamllint'

# System tests
cask 'chromedriver'
